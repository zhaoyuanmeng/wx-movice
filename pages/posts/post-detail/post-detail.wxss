/* pages/posts/post-detail/post-detail.wxss */
.container{
  width: 100%;
  display: flex;
  position: relative;
  flex-direction: column;

}
.head-img{
  width: 100%;
  height: 460rpx;
}
.audio{
  width: 102rpx;
  height: 110rpx;
  position: absolute;
  left: 50%;
  top: 180rpx;
  margin-left: -51rpx;
  opacity: 0.6
}
.avatar-content{
  display: flex;
  margin-top: 20px;
  width: 100%;
  align-items: center;
}
.avatar{
  margin-left: 40rpx;
  width: 100rpx;
  height: 100rpx;
}
.author{
  font-size: 30rpx;
  font-weight: 400;
  margin-left: 20rpx;
  color: #666;
}
.text{
  font-size: 20rpx;
  font-weight: 200;
  margin-left: 30rpx;
  color: #666;
}
.time{
  font-size: 25rpx;
  font-weight: 300;
  margin-left: 30rpx;
  color: #666;
}
.title{
  font-size: 40rpx;
  margin-top: 20px;
  margin-left: 30px;
  color: #000;

}
.icon-content{
  display: flex;
  align-items: center;
  width: 100%;
  justify-content: flex-end;
  z-index: 100;
}

.icon-content image{
  width: 100rpx;
  margin-right: 20px;
  height: 100rpx;
}

.line{
  width: 80%;
  height: 2rpx;
  background-color: #666;
  font-weight: 500;
  margin-left: 30px;
  position: relative;
  top: -40rpx;
}

.detail-content{
  margin: 20px 20px 0 30px;
  overflow: hidden;
  font-size: 30rpx;
  color: #666;
  font-weight: 500;
  white-space:normal;
}
