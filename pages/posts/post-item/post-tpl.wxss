.list-author-date{
  margin: 10rpx 0 20rpx 10rpx;
  /* 垂直居中很多方法 flex是最好的*/
  display: flex;
  flex-direction: row;
  align-items: center;
}
.list-author{
  height: 60rpx;
  width: 60rpx;
}
.list-date{
  font-size: 22rpx;
  margin-left: 20rpx;
}
.list-title{
  /* 网站经常使用这种颜色字体当标题 */
  color: #333;
  font-size: 34rpx;
  font-weight: 600;
  margin-bottom: 10px;
  margin-left: 10px;
}
.list-img{
  width: 100%;
  height: 340rpx;
  margin-bottom: 15px;
}
.list-content{
  font-size: 28rpx;
  color: #666;
  letter-spacing: 2rpx;
  margin-left: 20rpx;
  margin-bottom: 20rpx;
}
.list-like{
  margin-left: 26rpx;
  font-size: 26rpx;
  display: flex;
  align-items: center;
}
.list-like-img{
  height: 32rpx;
  width: 32rpx;
  margin-right: 16rpx;
}
.list-like-font{
  margin-right: 40rpx;
}